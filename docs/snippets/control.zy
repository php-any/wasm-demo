// 控制结构示例：if / for / foreach

function fib($n: int): int {
  if ($n <= 1) {
    return $n;
  }
  return fib($n - 1) + fib($n - 2);
}

$nums = [1, 2, 3, 4, 5];
$sum = 0;
for ($i = 0; $i < 5; $i = $i + 1) {
  $sum = $sum + $nums[$i];
}
echo "sum via for: {$sum}\n";

$sum2 = 0;
foreach ($nums as $n) {
  $sum2 = $sum2 + $n;
}
echo "sum via foreach: {$sum2}\n";

echo "fib(8) = " . fib(8) . "\n";


